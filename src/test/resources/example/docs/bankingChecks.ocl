package example.docs;

import docs.Banking.*;

ocl bankingChecks {
  context Bank b inv OverallBalanceCorrect:
  let
    balances = { acc.balance | Account acc in b.account };
    calculatedBalance = iterate { balance in balances;
                                  double sum = 0.0 :
                                  sum = sum + balance }
  in
    b.overallBalance == calculatedBalance;
}